  <body>
    <div class="login-container">
      <form class="form-signin" method="POST" action="/resetpassword">
        <center>
          <h3>Fill this form to reset your password</h3>
        </center>
        <input id="checkPoint" type="text" class="input-block-level" placeholder="Email" name="email">
        <input type="password" class="input-block-level" name="password" placeholder="Your new password">
        <input type="password" class="input-block-level" name="re_password" placeholder="Re-type your new password">
        <button type="submit" class="btn btn-primary btn-block"><i class="icon-unlock"></i> Reset</button>
      </form>
    </div>

